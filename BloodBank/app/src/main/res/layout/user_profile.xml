<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/profile1"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".user_profile" >

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignLeft="@+id/imageView2"
        android:layout_alignTop="@+id/blood"
        android:src="@drawable/blood" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignRight="@+id/imageView3"
        android:layout_below="@+id/imageView5"
        android:layout_marginTop="20dp"
        android:src="@drawable/age" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignLeft="@+id/imageView2"
        android:layout_below="@+id/imageView2"
        android:layout_marginTop="17dp"
        android:src="@drawable/location" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_below="@+id/imageView4"
        android:layout_marginTop="20dp"
        android:src="@drawable/call" />

    <TextView
        android:id="@+id/age"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/blood"
        android:layout_alignTop="@+id/imageView2"
        android:text="age"
        android:textAlignment="center"
        android:textColor="#a60808"
        android:textColorHint="#a60808"
        android:textSize="20sp"
        android:textStyle="italic"
        android:typeface="sans" />

    <TextView
        android:id="@+id/blood"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView1"
        android:layout_marginRight="26dp"
        android:layout_marginTop="38dp"
        android:layout_toLeftOf="@+id/Edit1"
        android:text="blood"
        android:textAlignment="center"
        android:textColor="#a60808"
        android:textColorHint="#a60808"
        android:textSize="20sp"
        android:textStyle="italic"
        android:typeface="sans" />

    <TextView
        android:id="@+id/location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/imageView4"
        android:layout_alignLeft="@+id/age"
        android:text="location"
        android:textAlignment="center"
        android:textColor="#a60808"
        android:textColorHint="#a60808"
        android:textSize="20sp"
        android:textStyle="italic"
        android:typeface="sans" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textView2"
        android:layout_alignBottom="@+id/textView2"
        android:layout_toRightOf="@+id/imageView3"
        android:text="@string/txtlog" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="23dp"
        android:layout_toRightOf="@+id/textView1"
        android:text="@string/logout"
        android:textColor="#a60808" />

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/Name"
        android:src="@drawable/name" />

    <TextView
        android:id="@+id/phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/imageView3"
        android:layout_toRightOf="@+id/imageView1"
        android:text="phone"
        android:textAlignment="center"
        android:textColor="#a60808"
        android:textColorHint="#a60808"
        android:textSize="20sp"
        android:textStyle="italic"
        android:typeface="sans" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:text="active"
        android:textSize="16dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#60d1eb" />

    <Button
        android:id="@+id/Edit1"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="130dp"
        android:layout_height="40dp"
        android:layout_alignTop="@+id/imageView1"
        android:layout_marginTop="14dp"
        android:layout_toRightOf="@+id/textView1"
        android:background="#ad9797"
        android:text="Edit Profile"
        android:backgroundTint="#a60808"
        android:textColor="#FFFFFF" />

    <TextView
        android:id="@+id/Name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/Edit1"
        android:layout_alignTop="@+id/textView3"
        android:text="Name"
        android:textAlignment="center"
        android:textColor="#a60808"
        android:textColorHint="#a60808"
        android:textSize="20sp"
        android:textStyle="italic"
        android:typeface="sans" />

</RelativeLayout>
