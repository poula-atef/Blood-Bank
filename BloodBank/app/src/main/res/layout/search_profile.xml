<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:background="@drawable/profile1"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".search_profile" >

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignLeft="@+id/imageView2"
        android:layout_alignTop="@+id/blood"
        android:src="@drawable/blood" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignRight="@+id/imageView3"
        android:layout_below="@+id/imageView5"
        android:layout_marginTop="20dp"
        android:src="@drawable/age" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignLeft="@+id/imageView2"
        android:layout_below="@+id/imageView2"
        android:layout_marginTop="17dp"
        android:src="@drawable/location" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_below="@+id/imageView4"
        android:layout_marginTop="20dp"
        android:src="@drawable/call" />

    <ImageView
        android:id="@+id/imageView7"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignTop="@+id/imageView6"
        android:layout_marginLeft="14dp"
        android:layout_toRightOf="@+id/imageView6"
        android:src="@drawable/message" />

    <TextView
        android:id="@+id/Name"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="38dp"
        android:layout_marginTop="23dp"
        android:text="Name"
        android:textAlignment="center"
        android:textColor="#a60808"
        android:textColorHint="#a60808"
        android:textSize="20sp"
        android:textStyle="italic"
        android:typeface="sans" />

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignLeft="@+id/imageView5"
        android:layout_alignTop="@+id/Name"
        android:src="@drawable/name" />

    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignLeft="@+id/Name"
        android:layout_below="@+id/Name"
        android:src="@drawable/dial2" />

    <TextView
        android:id="@+id/blood"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView1"
        android:layout_marginTop="41dp"
        android:layout_toRightOf="@+id/imageView1"
        android:text="blood"
        android:textAlignment="center"
        android:textColor="#a60808"
        android:textColorHint="#a60808"
        android:textSize="20sp"
        android:textStyle="italic"
        android:typeface="sans" />

    <TextView
        android:id="@+id/location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/imageView3"
        android:layout_alignLeft="@+id/blood"
        android:text="location"
        android:textAlignment="center"
        android:textColor="#a60808"
        android:textColorHint="#a60808"
        android:textSize="20sp"
        android:textStyle="italic"
        android:typeface="sans" />

    <TextView
        android:id="@+id/age"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/blood"
        android:layout_alignTop="@+id/imageView2"
        android:text="age"
        android:textAlignment="center"
        android:textColor="#a60808"
        android:textColorHint="#a60808"
        android:textSize="20sp"
        android:textStyle="italic"
        android:typeface="sans" />

    <TextView
        android:id="@+id/phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/imageView3"
        android:layout_alignLeft="@+id/location"
        android:text="phone"
        android:textAlignment="center"
        android:textColor="#a60808"
        android:textColorHint="#a60808"
        android:textSize="20sp"
        android:textStyle="italic"
        android:typeface="sans" />

</RelativeLayout>